@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Centric Employee Recognition Tool</h1>
    <p class="lead">Recognize other employees based on the companies core values or view other recognitions that have been made</p>
    <p>@Html.ActionLink("New Recognition!", "Create", "recognitions", null, new { @class = "btn btn-primary btn-lg" })</p>
</div>



    <div class="row">
        <div class="col-md-4">
            <h2>View Recognitions</h2>
            <p>
                View the recognitions that your fellow employees have made.
            </p>
            <p>@Html.ActionLink("View Recognitions", "Index", "recognitions", null, new { @class = "btn btn-default" })</p>
        </div>
        <div class="col-md-4">
            <h2>View Employees</h2>
            <p>Look up other employees, see their profiles and how to contact them.</p>
            <p>@Html.ActionLink("View users", "Index", "userDetails", null, new { @class = "btn btn-default" })</p>
        </div>
        <div class="col-md-4">
            <h2>Core Values</h2>
            <p>Learn about the core values of the firm and what it means to recognize another employee</p>
            <p>@Html.ActionLink("Core Values", "About", "Home", null, new { @class = "btn btn-default" })</p>
        </div>
    </div>




<div class="container">
    <h2>Twitter Timeline</h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Timeline</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">CentricConsulting</h4>
                    
                </div>
                <div class="modal-body">
                    <center>
                        <a class="twitter-timeline" href="https://twitter.com/centric?ref_src=twsrc%5Etfw">Tweets by Centric</a>
                        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                    </center>
                       
                   
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>