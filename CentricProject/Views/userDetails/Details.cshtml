<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<p>
    <div>
        <div class="col-md-6">
            <h4>Recognitions given by @Html.DisplayFor(model => model.firstName)</h4>
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        Recognizer
                    </th>
                    <th>
                        Recognizee
                    </th>
                    <th>
                        Core Value
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Date
                    </th>
                </tr>

                @foreach (var item in ViewBag.MyList)
            {
                    <tr>
                        <td>
                            @ViewBag.recognizer
                        </td>
                        <td>
                            @ViewBag.recognizee
                        </td>
                        <td>
                            @ViewBag.coreValue
                        </td>
                        <td>
                            @ViewBag.description
                        </td>
                        <td>
                            @ViewBag.dateTime
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-md-6">
            <h4>Recognitions recieved by @Html.DisplayFor(model => model.firstName) </h4>
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        Recognizer
                    </th>
                    <th>
                        Recognizee
                    </th>
                    <th>
                        Core Value
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Date
                    </th>
                </tr>

                @foreach (var item in ViewBag.MyListRec)
            {
                    <tr>
                        <td>
                            @ViewBag.recognizerRec
                        </td>
                        <td>
                            @ViewBag.recognizeeRec
                        </td>
                        <td>
                            @ViewBag.coreValueRec
                        </td>
                        <td>
                            @ViewBag.descriptionRec
                        </td>
                        <td>
                            @ViewBag.dateTimeRec
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</p>