@model CentricProject.Models.userDetails



@{
    ViewBag.Title = "Details";
    @ViewBag.MyList;
}


<h2>Details</h2>

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.firstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.lastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.office)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.office)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.currentRole)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.currentRole)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.anniversary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anniversary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.yearsWithCentric)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.yearsWithCentric)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.photo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.photo)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div>
    <div class="col-lg-6">
        <h4>Recognitions given by this user</h4>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    Recognizer
                </th>
                <th>
                    Recognizee
                </th>
                <th>
                    Core Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in ViewBag.MyList)
            {
                <tr>
                    <td>
                        @(((ViewBag.item as ICollection<recognition>).Giver)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.userDetails.fullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.recognitionCoreValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateTime)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.recognitionID })
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="col-lg-6">
        <h4>Recognitions recieved by this user</h4>
    </div>
</div>
