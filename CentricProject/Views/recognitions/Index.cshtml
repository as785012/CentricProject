@model IEnumerable<CentricProject.Models.recognition>

@{
    ViewBag.Title = "Index";
}

<h2>View Recognitions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.recognizer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognizee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognitionCoreValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.starPoints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Giver.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userDetails.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognitionCoreValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            <span class="glyphicon glyphicon-star"></span> x @Html.DisplayFor(modelItem => item.starPoints) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateTime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.recognitionID }) 
        </td>
    </tr>
}

</table>
